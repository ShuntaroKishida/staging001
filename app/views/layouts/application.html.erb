<!DOCTYPE html>
<html>
  <head>
    <title>Staging001</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link rel="stylesheet" href="https://unpkg.com/destyle.css@1.0.5/destyle.css">
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="header">
      <div class="logo">
        <%= link_to 'Staging', root_path %>
      </div>
      <div class="header_right">
        <div class="login_btn">
          <p>ログイン</p>
        </div>
      </div>
    </div>
    <div class="main">
      <div class="main_menu">
        <div class="menu_btn">
          <ul>
            <li><%= link_to 'ホーム', root_path %></li>
            <li><%= link_to '企業一覧', root_path %></li>
            <li><%= link_to '生徒一覧', root_path %></li>
            <li><%= link_to '新規登録', new_company_path %></li>
            <li><%= link_to 'カリキュラム', root_path %></li>
            <li><%= link_to 'マイページ', root_path %></li>
          </ul>
        </div>
      </div>
      <div class="main_area">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
